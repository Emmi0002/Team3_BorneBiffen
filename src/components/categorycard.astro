---
// Henter parametrene fra Astro.props
const { imageSrc = "/assets/images/thumbsup.png", imageAlt = "Category image", label = "Category Label", stylingClasses = "" } = Astro.props;

import Text from "./Text.astro";
---

<div class={`relative w-[250px] cursor-pointer group mt-8 ${stylingClasses}`}>
  <!-- Baggrunds-firkant med tekst -->
  <div class="bg-[var(--color-surface-subtle)] group-hover:bg-base-300 transition-colors duration-300 rounded-lg shadow-md pt-24 pb-6 px-4 text-center min-h-[200px] flex flex-col justify-end">
    <Text teksttype="Headline" weight="Bold" color="label">
      {label}
    </Text>
  </div>

  <!-- Billede der ligger foran og rykker opad ved hover -->
  <img src={imageSrc} alt={imageAlt} class="absolute -top-12 left-1/2 transform -translate-x-1/2 w-[267px] h-50 object-cover rounded-lg transition-transform duration-300 group-hover:-translate-y-2 group-hover:-translate-x-1/2" />
</div>
