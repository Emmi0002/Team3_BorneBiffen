---
// Henter parametrene fra Astro.props
const { imageSrc = "/assets/images/thumbsup.png", imageAlt = "Category image", label = "Category Label", stylingClasses = "" } = Astro.props;
---

<div class={`relative bg-[var(--color-surface-subtle)] rounded-lg overflow-hidden shadow-md w-[267px] cursor-pointer transition-all duration-300 hover:bg-base-300 hover:shadow-xl group ${stylingClasses}`}>
  <!-- Billede der gÃ¥r udover baggrunden i toppen -->
  <div class="relative -mb-4 overflow-hidden">
    <img src={imageSrc} alt={imageAlt} class="w-full h-32 object-cover rounded-t-lg transition-transform duration-300 group-hover:scale-110 group-hover:-translate-y-2" />
  </div>

  <!-- Text label inde i baggrunden -->
  <div class="p-4 pt-6">
    <h3 class="text-base font-semibold text-base-content transition-colors duration-300">
      {label}
    </h3>
  </div>
</div>
