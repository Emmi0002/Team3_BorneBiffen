---
// Henter parametrene fra Astro.props
const { imageSrc = "/assets/images/thumbsup.png", imageAlt = "Category image", label = "Category Label", stylingClasses = "" } = Astro.props;

import Text from "./Text.astro";
---

<div class={`relative w-[267px] cursor-pointer group ${stylingClasses}`}>
  <!-- Baggrunds-firkant med tekst -->
  <div class="bg-[var(--color-surface-subtle)] group-hover:bg-base-300 transition-colors duration-300 rounded-lg shadow-md pt-16 pb-4 px-4 text-center">
    <Text teksttype="Headline" weight="Bold" color="label">
      {label}
    </Text>
  </div>

  <!-- Billede der ligger foran og rykker opad ved hover -->
  <img src={imageSrc} alt={imageAlt} class="absolute -top-20 left-1/2 transform -translate-x-1/2 w-[200px] h-32 object-cover rounded-lg shadow-lg transition-transform duration-300 group-hover:-translate-y-2 group-hover:-translate-x-1/2" />
</div>
