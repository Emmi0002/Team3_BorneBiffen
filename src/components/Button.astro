---
// Henter parametrene fra Astro.props
const { variant = "primary", size = "medium" } = Astro.props;

//Definer den styling (Tailwind classes, der gør sig gældende for alle knapper)
// Fjern faste padding her — brug spacing-variabler for store (mega) knapper via sizeClasses
const buttonStyling = "border-2";

//Definer den styling (Tailwind classes, der gør sig gældende for de forskellige varianter
// Bruger projektets temafarver fra `src/styles/tailwind.css` (hex værdier)
const variantClasses = {
  primary:
    "rounded-[var(--radius-m)] border-[var(--color-primary)] bg-[var(--color-secondary)] hover:bg-[var(--color-primary)] hover:text-[var(--color-primary-content)] transition-all duration-200",
  secondary:
    "rounded-[var(--radius-m)] border-[var(--color-secondary)] bg-[var(--color-neutral)] hover:bg-[var(--color-secondary)] hover:text-[var(--color-secondary-content)] transition-all duration-200",

  primarypill:
    "rounded-[var(--radius-full)] border-[var(--color-primary)] bg-[var(--color-secondary)] hover:bg-[var(--color-primary)] hover:text-[var(--color-primary-content)] transition-all duration-200",
  secondarypill:
    "rounded-[var(--radius-full)] border-[var(--color-secondary)] bg-[var(--color-neutral)] hover:bg-[var(--color-secondary)] hover:text-[var(--color-secondary-content)] transition-all duration-200",
};

//Definer den styling (Tailwind classes), der gør sig gældende for de forskelligeog størrelser.
const sizeClasses = {
  small: "text-sm px-[var(--spacing-horizontal)] py-[var(--spacing-vertical)]",
  medium:
    "text-xl px-[var(--spacing-horizontal-m)] py-[var(--spacing-vertical-m)]",
  large:
    "text-4xl px-[var(--spacing-horizontal-l)] py-[var(--spacing-vertical-l)]",
};
---

<!--Sæt classes for den pågældende knap sammen ved hjælp af Astros class:list -->
<button class:list={[buttonStyling, variantClasses[variant], sizeClasses[size]]}
  ><slot /></button
>
