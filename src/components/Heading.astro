---
// Henter parametrene fra Astro.props
const { htmlheading = "h2", size = "", weight = "Regular", stylingclasses = "", color = "negative" } = Astro.props;
const Htmlheading = htmlheading;

//Definer den styling (Tailwind classes), der gør sig gældende for de forskellige størrelser.
const sizeClasses = {
  Large: "text-[28px] md:text-[33px] lg:text-[49px]",
  Medium: "text-[23px] md:text-[27px] lg:text-[39px]",
  Small: "text-[20px] md:text-[23px] lg:text-[31px]",
  Xsmall: "text-[18px] md:text-[19px] lg:text-[25px]",
};

const typeClasses = {
  Light: "font-light font-['MerriweatherSansLight']",
  Regular: "font-regular font-['MerriweatherSansRegular']",
  Bold: "font-bold font-['MerriweatherSanBold']",
  Ekstrabold: "font-ekstrabold font-['MerriweatherSansExtraBold']",
};

const colorClasses = {
  label: "text-[var(--color-text-label)]",
  body: "text-[var(--color-base-content)]",
  negative: "text-[var(--color-primary-content)]",
};
---

<Htmlheading class:list={[stylingclasses, sizeClasses[size], colorClasses[color], typeClasses[weight]]}><slot /></Htmlheading>
