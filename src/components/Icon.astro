---
const { icon = "", size = "medium", strokecolor = "negative" } = Astro.props;

const sizeClasses = {
  small: "0 0 16 16",
  medium: "0 0 20 20",
  large: "0 0 24 24",
  xlarge: "0 0 40 40",
};

const strokeClasses = {
  primary: "text-[var(--color-primary)]",
  secondary: "text-[var(--color-secondary)]",
  negative: "text-[var(--color-base-100)]",
};
---

<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox={sizeClasses[size]} stroke-width="2" class={`size-6 ${strokeClasses[strokecolor]}`} {...{ innerHTML: icon }}></svg>
