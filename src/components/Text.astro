---
// Henter parametrene fra Astro.props
const {
  teksttype = "",
  stylingclasses = "",
  weight = "Regular",
  color = "negative",
} = Astro.props;

//Definer den styling (Tailwind classes), der gør sig gældende for de forskellige størrelser.
const sizeClasses = {
  Headline: "text-[13px] md:text-[16px] lg:text-[20px]",
  Body: "text-[12px] md:text-[13px] lg:text-[16px]",
  Subtitle: "text-[11px] md:text-[11px] lg:text-[14px]",
  Caption: "text-[12px] md:text-[12px] lg:text-[13px]",
  Footnote: "text-[12px] md:text-[12px] lg:text-[12px] uppercase",
};

const typeClasses = {
  Light: "font-light font-['MerriweatherSansLight']",
  Regular: "font-regular font-['MerriweatherSansRegular']",
  Bold: "font-bold font-['MerriweatherSanBold']",
  Ekstrabold: "font-ekstrabold font-['MerriweatherSansExtraBold']",
};

const colorClasses = {
  label: "text-[var(--color-text-label)]",
  body: "text-[var(--color-base-content)]",
  negative: "text-[var(--color-primary-content)]",
};
---

<p
  class:list={[
    sizeClasses[teksttype],
    typeClasses[weight],
    colorClasses[color],
    stylingclasses,
  ]}
>
  <slot />
</p>
