---
import MainLayout from "../layouts/MainLayout.astro";
import Card from "../components/Card.astro";
import Heading from "../components/Heading.astro";
import Text from "../components/Text.astro";
import Icon from "../components/Icon.astro";
---

<MainLayout title="Titel">
  <!-- ---------------------Section: Herosection------------------------- -->
  <section
    class="relative bg-[url('/img/Snemandenogsnehunden.webp')] bg-cover bg-center h-[80vh] mb-[var(--spacing-horizontal-l)] pb-[var(--spacing-horizontal-l)]"
  >
    <!-- Horisontalt gradient-overlay: transparent (0%) til sort med 80% opacitet -->
    <div class="absolute inset-0" style="background: linear-gradient(to right, rgba(0,0,0,0) 0%, rgba(0,0,0,0.8) 100%);"></div>
    <img src="/img/icons/playnegative.webp" alt="Play icon" class="absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 z-20 w-16 h-16 lg:w-24 lg:h-24 object-contain" />
    <img
      src="/img/icons/arrowleft-negative.webp"
      alt="Gå tilbage knap"
      class="absolute top-[var(--spacing-vertical-l)] left-[var(--spacing-horizontal-l)] z-40 w-10 h-10 object-contain cursor-pointer"
    />
    <div class="relative z-10 max-w-6xl mx-auto h-full flex items-end justify-end mr-[var(--spacing-horizontal-l)] mb-[var(--spacing-horizontal-l)]">
      <div class="text-right">
        <Heading size="Large" weight="Ekstrabold" class=""
          >Snemanden og <br />Snehunden</Heading
        >
        <div
          class="flex items-center justify-end gap-3 mb-[var(--spacing-vertical-xs)]"
        >
          <Heading size="Medium" weight="Light">24 min</Heading>
          <Icon imgDefault="/img/icons/clock-white.webp" size="xl" />
        </div>
        <Icon imgDefault="/img/icons/heart.webp" size="xl" />
      </div>
    </div>
  </section>
  <!-- ---------------------Section: Information om filmen------------------------- -->
  <section class="grid grid-cols-[2fr_1fr] mx-[var(--margin-side-large)] mb-[var(--spacing-vertical-l)]">
    <article>
      <Heading size="Medium" stylingclasses="mb-[var(--spacing-vertical-xs)]"
        >Mere om filmen</Heading
      >
      <!-- Badges -->
      <div class="gap-[var(--spacing-horizontal-xs)] mb-[var(--spacing-large)]">
        <!-- Mobile: horisontal scroll; Desktop: normal (overflow-visible) -->
        <div class="w-full overflow-x-auto md:overflow-visible -mx-[var(--spacing-horizontal)] px-[var(--spacing-horizontal)] touch-pan-x">
          <div class="flex gap-4 pb-4 flex-nowrap w-max">
            <!-- Vinter -->
            <div class="flex items-center justify-center px-[var(--spacing-horizontal)] py-[var(--spacing-vertical-m)] mt-auto badge badge-secondary border-neutral min-w-[96px]">
              <div class="flex items-center gap-2">
                <Text teksttype="Caption" weight="Bold">Vinter</Text>
              </div>
            </div>
            <!-- Jul -->
            <div class="flex items-center justify-center px-[var(--spacing-horizontal)] py-[var(--spacing-vertical-m)] mt-auto badge badge-secondary border-neutral min-w-[96px]">
              <div class="flex items-center gap-2">
                <Text teksttype="Caption" weight="Bold">Jul</Text>
              </div>
            </div>
            <!-- Kæledyr -->
            <div class="flex items-center justify-center px-[var(--spacing-horizontal)] py-[var(--spacing-vertical-m)] mt-auto badge badge-secondary border-neutral min-w-[96px]">
              <div class="flex items-center gap-2">
                <Text teksttype="Caption" weight="Bold">Kæledyr</Text>
              </div>
            </div>
            <!-- Fantasi -->
            <div class="flex items-center justify-center px-[var(--spacing-horizontal)] py-[var(--spacing-vertical-m)] mt-auto badge badge-secondary border-neutral min-w-[96px]">
              <div class="flex items-center gap-2">
                <Text teksttype="Caption" weight="Bold">Fantasi</Text>
              </div>
            </div>
            <!-- Fantasivenner -->
            <div class="flex items-center justify-center px-[var(--spacing-horizontal)] py-[var(--spacing-vertical-m)] mt-auto badge badge-secondary border-neutral min-w-[96px]">
              <div class="flex items-center gap-2">
                <Text teksttype="Caption" weight="Bold">Fantasivenner</Text>
              </div>
            </div>
            <!-- Nordpolen -->
            <div class="flex items-center justify-center px-[var(--spacing-horizontal)] py-[var(--spacing-vertical-m)] mt-auto badge badge-secondary border-neutral min-w-[96px]">
              <div class="flex items-center gap-2">
                <Text teksttype="Caption" weight="Bold">Nordpolen</Text>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- Beskrivelse -->
      <div>
        <Text
          teksttype="Body"
          stylingclasses="mb-[var(--spacing-large)] max-w-[70%]"
          >En lille dreng får sit livs julegave, da den snemand og snehund, han
          har bygget i sin baghave, bliver vakt til live. Sammen tager de på
          eventyr i vinterlandskabet og når helt til snemandstræf på Nordpolen,
          hvor de endda møder Julemanden. Men kan magien vare ved til
          morgenstunden?</Text
        >
        <Text
          teksttype="Body"
          weight="Bold"
          stylingclasses="mb-[var(--spacing-vertical-xs)] max-w-[50%]"
          >Instruktør</Text
        >
        <Text
          teksttype="Body"
          stylingclasses="mb-[var(--spacing-large)] max-w-[50%]"
          >Hilary Audus & Robin Shaw (Storbritannien, 2012)</Text
        >
        <Text teksttype="Body" weight="Bold" stylingclasses="mb-[var(--spacing-vertical-xs)] md:max-w-[50%]">Instruktør</Text>
        <Text teksttype="Body" stylingclasses="md:max-w-[50%]">Hilary Audus & Robin Shaw (Storbritannien, 2012)</Text>
      </div>
    </article>
    <img class="hidden scale-70 z-20 lg:block" src="/img/Popcorn.webp" alt="Billede af figuren Poppi" />
  </section>
  <!-- --------------Section: Karousel med "Film der minder om"--------------- -->
  <section class="mx-[var(--margin-side-large)]">
    <Heading
      size="Small"
      weight="Bold"
      stylingclasses="mb-[var(--spacing-large)]">Film der minder om</Heading
    >
    <div class="gap-[var(--spacing-large)]">
      <div class="overflow-x-auto">
        <div class="flex gap-4 pb-4 flex-nowrap">
          <!-- Card 1 -->
          <div class="min-w-[150px] sm:min-w-[180px] lg:min-w-[300px]">
            <Card
              imgSrc="/img/Snemandenogsnehunden.webp"
              imgAlt="Snemanden og Snehunden"
              title="Snemanden og Snehunden"
              body="En lille dreng får sit livs julegave, da den snemand og snehund, han har bygget i sin baghave, bliver vakt til live. Sammen tager de på eventyr i vinterlandskabet og når helt til snemandstræf på Nordpolen, hvor de endda møder Julemanden. Men kan magien vare ved til morgenstunden?"
              badgestate="true"
              badge="Vinter"
              duration="24 min"
            />
          </div>

          <!-- Card 2 -->
          <div class="min-w-[150px] sm:min-w-[180px] lg:min-w-[300px]">
            <Card
              imgSrc="/img/Sandkassen6-26-Snemanden.webp"
              imgAlt="Sandkassen 6:26 - Snemanden"
              title="Sandkassen 6:26 - Snemanden"
              body="Det er blevet koldt i sandkassen, og Bror og Marie leger i sneen. Bror forsvinder i sneen, og Marie møder en snemand, der kan tale. Er der noget inde i snemanden?"
              badgestate="true"
              badge="Vinter"
              duration="3 min"
            />
          </div>

          <!-- Card 3 -->
          <div class="min-w-[150px] sm:min-w-[180px] lg:min-w-[300px]">
            <Card
              imgSrc="/img/Snemanden.webp"
              imgAlt="Snemanden"
              title="Snemanden"
              body="En snemand bliver på magisk vis vakt til live i denne smukke, ordløse animationsfilm om barndommens idyl og fantasiens glæder. En lille dreng opdager til sin forundring, at den snemand, han har bygget i sin baghave, er blevet levende. En eventyrlig nat med sjove påfund og leg i vinterlandskabet følger."
              badgestate="true"
              badge="Vinter"
              duration="25 min"
            />
          </div>

          <!-- Card 4 -->
          <div class="min-w-[150px] sm:min-w-[180px] lg:min-w-[300px]">
            <Card
              imgSrc="/img/VilleogVildeKanin.webp"
              imgAlt="Ville og Vilde Kanin"
              title="Ville og Vilde Kanin"
              body="Ville er en lille hvid kanin, der bor i et bur på en bondegård, hvor han har det godt og trygt. Men en dag er buret ikke blevet låst, og Ville falder ud. Skal han kravle op igen, eller skal han hellere hoppe ud og se, hvordan der er ude i skoven?"
              badgestate="true"
              badge="Venskab"
              duration="29 min"
            />
          </div>
          <!-- Card 5 -->
          <div class="min-w-[150px] sm:min-w-[180px] lg:min-w-[300px]">
            <Card
              title="Snuden rejser hjemmefra"
              imgSrc="/img/Snuden.webp"
              imgAlt="Snuden rejser hjemmefra"
              body="Snuden er et hemmeligt og fredeligt dyr, der lever i sin grønne mose. Her er han ven med alle dyr. En dag vil en jæger skyde hans bedste ven, odderen Otto, og Snuden beslutter at opklare, hvorfor mennesker er så tossede. Han forlader mosen og møder en menneske-pige, som bor i den store by. På et værtshus spiser en bisse. Den sultne Snude snupper bøffen, og så bliver der slagsmål. Snuden vakler ud i den mørke nat. Kæmperotten Rita tager sig af den forkomne Snude."
              badgestate="true"
              badge="Eventyr"
              duration="17 min"
            />
          </div>
          <!-- Card 6 -->
          <div class="min-w-[150px] sm:min-w-[180px] lg:min-w-[300px]">
            <Card
              imgSrc="/img/Vitellobliverforretningsmand.webp"
              imgAlt="Vitello bliver forretningsmand"
              title="Vitello bliver forretningsmand"
              body="I fjernsynet hører Vitello om en smart fyr der har tjent en million kroner. Han har tjent dem ved at være en forretningsmand der køber billigt og sælger dyrt. Vitello og hans venner vil også gerne tjene en million kroner. De skal bare lige finde noget der er billigt…"
              badgestate="true"
              badge="Vitello"
              duration="7 min"
            />
          </div>
          <!-- Card 7 -->
          <div class="min-w-[150px] sm:min-w-[180px] lg:min-w-[300px]">
            <Card
              imgSrc="/img/Vitellomodergud.webp"
              imgAlt="Vitello møder gud"
              title="Vitello møder gud"
              body="Vitello har en af de dage hvor det ikke er så sjovt at være Vitello og ikke at have nogen far. Men så møder han en gammel mand med et meget stort hvidt skæg. Han sidder med en øl på en bænk ved centered. Vitello kender kun to gamle mænd med så store hvide skæg. Gud og Julemanden. Og det er ikke jul. Og Gud kan som bekendt få alting til at ske, alt I hele verden…"
              badgestate="true"
              badge="Vitello"
              duration="7 min"
            />
          </div>
          <!-- Card 8 -->
          <div class="min-w-[150px] sm:min-w-[180px] lg:min-w-[300px]">
            <Card
              title="Rita og Krokodille: Skovturen"
              imgSrc="/img/Rita.webp"
              imgAlt="Rita og Krokodille: Skovturen"
              body="Vennerne skal ud og samle kastanjer i skoven. Rita formaner Krokodille at blive på stien, så han ikke farer vild. Men da hun ser et helt tæppe af glitrende kastajner glemmer hun alt, hvad hun har sagt. I jagten på de flotte kastajner glemmer hun alt om stien og farer vild. Krokodille hjælper hende at finde tilbage."
              badgestate="true"
              badge="Venskab"
              duration="5 min"
            />
          </div>
        </div>
      </div>
    </div>
  </section>
</MainLayout>
