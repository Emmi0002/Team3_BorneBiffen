---
import MainLayout from "../layouts/MainLayout.astro";
import Heading from "../components/Heading.astro";
import Text from "../components/Text.astro";
import Icon from "../components/Icon.astro";
import Cardslider from "../components/Cardslider.astro";
import Header from "../components/Header.astro";
---

<MainLayout title="Børnebiffen - Singleview">
  <Header />

  <!-- ---------------------Section: Herosection------------------------- -->
  <section class="relative bg-[url('/img/Snemandenogsnehunden.webp')] bg-cover bg-center h-[90vh] mb-[var(--spacing-horizontal-l)] pb-[var(--spacing-horizontal-l)] -mt-25">
    <!-- Horisontalt gradient-overlay: transparent (0%) til sort med 80% opacitet -->
    <div class="absolute inset-0" style="background: linear-gradient(to right, rgba(0,0,0,0) 0%, rgba(0,0,0,0.8) 100%);"></div>
    <img src="/img/icons/playnegative.webp" alt="Play icon" class="absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 z-20 w-16 h-16 lg:w-24 lg:h-24 object-contain" />
    <a href="/listview">
      <img src="/img/icons/arrowleft-negative.webp" alt="Gå tilbage knap" class="absolute top-25 left-[var(--spacing-horizontal-l)] z-40 w-10 h-10 object-contain hover:cursor-pointer" />
    </a>
    <div class="relative z-10 max-w-6xl mx-auto h-full flex items-end justify-end mr-[var(--spacing-horizontal)] lg:mr-[var(--spacing-horizontal-l)] mb-[var(--spacing-horizontal-l)]">
      <div class="text-right">
        <Heading size="Large" weight="Ekstrabold" class="">Snemanden og <br />Snehunden</Heading>
        <div class="flex items-center justify-end gap-3 mb-[var(--spacing-vertical-xs)]">
          <Heading size="Medium" weight="Light">24 min</Heading>
          <Icon imgDefault="/img/icons/clock-white.webp" size="xl" />
        </div>
        <Icon imgDefault="/img/icons/heart.webp" size="xl" />
      </div>
    </div>
  </section>
  <!-- ---------------------Section: Information om filmen------------------------- -->
  <section class="grid grid-cols-[2fr_1fr] mx-[var(--margin-side-small)] lg:mx-[var(--margin-side-large)] mb-[var(--spacing-vertical-l)] overflow-x-hidden">
    <article>
      <Heading size="Medium" stylingclasses="mb-[var(--spacing-vertical-xs)]">Mere om filmen</Heading>
      <!-- Badges -->
      <div class="gap-[var(--spacing-horizontal-xs)] mb-[var(--spacing-large)]">
        <!-- Mobile: horisontal scroll; Desktop: normal (overflow-visible) -->
        <div class="w-full overflow-x-auto md:overflow-visible -mx-[var(--spacing-horizontal)] px-[var(--spacing-horizontal)] touch-pan-x">
          <div class="flex gap-[var(--spacing-horizontal-xs)] flex-nowrap w-max">
            <!-- Vinter -->
            <div class="flex items-center justify-center px-[var(--spacing-horizontal)] py-[var(--spacing-vertical-m)] mt-auto badge badge-secondary border-neutral min-w-[96px] w-max">
              <div class="flex items-center gap-2">
                <Text teksttype="Caption" weight="Bold">Vinter</Text>
              </div>
            </div>
            <!-- Jul -->
            <div class="flex items-center justify-center px-[var(--spacing-horizontal)] py-[var(--spacing-vertical-m)] mt-auto badge badge-secondary border-neutral min-w-[96px] w-max">
              <div class="flex items-center gap-2">
                <Text teksttype="Caption" weight="Bold">Jul</Text>
              </div>
            </div>
            <!-- Kæledyr -->
            <div class="flex items-center justify-center px-[var(--spacing-horizontal)] py-[var(--spacing-vertical-m)] mt-auto badge badge-secondary border-neutral min-w-[96px] w-max">
              <div class="flex items-center gap-2">
                <Text teksttype="Caption" weight="Bold">Kæledyr</Text>
              </div>
            </div>
            <!-- Fantasi -->
            <div class="flex items-center justify-center px-[var(--spacing-horizontal)] py-[var(--spacing-vertical-m)] mt-auto badge badge-secondary border-neutral min-w-[96px] w-max">
              <div class="flex items-center gap-2">
                <Text teksttype="Caption" weight="Bold">Fantasi</Text>
              </div>
            </div>
            <!-- Fantasivenner -->
            <div class="flex items-center justify-center px-[var(--spacing-horizontal)] py-[var(--spacing-vertical-m)] mt-auto badge badge-secondary border-neutral min-w-[96px] w-max">
              <div class="flex items-center gap-2">
                <Text teksttype="Caption" weight="Bold">Fantasivenner</Text>
              </div>
            </div>
            <!-- Nordpolen -->
            <div class="flex items-center justify-center px-[var(--spacing-horizontal)] py-[var(--spacing-vertical-m)] mt-auto badge badge-secondary border-neutral min-w-[96px] w-max">
              <div class="flex items-center gap-2">
                <Text teksttype="Caption" weight="Bold">Nordpolen</Text>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- Beskrivelse -->
      <div>
        <Text teksttype="Body" stylingclasses="mb-[var(--spacing-large)] max-w-[70%]"
          >En lille dreng får sit livs julegave, da den snemand og snehund, han har bygget i sin baghave, bliver vakt til live. Sammen tager de på eventyr i vinterlandskabet og når helt til
          snemandstræf på Nordpolen, hvor de endda møder Julemanden. Men kan magien vare ved til morgenstunden?</Text
        >
        <Text teksttype="Body" weight="Bold" stylingclasses="mb-[var(--spacing-vertical-xs)] max-w-[50%]">Instruktør</Text>
        <Text teksttype="Body" stylingclasses="mb-[var(--spacing-large)] max-w-[50%]">Hilary Audus & Robin Shaw (Storbritannien, 2012)</Text>
      </div>
    </article>
    <img class="hidden scale-70 z-20 lg:block" src="/img/Popcorn.webp" alt="Billede af figuren Poppi" />
  </section>
  <!-- --------------Section: Karousel med "Film der minder om"--------------- -->
  <Cardslider Overskrift="Film der minder om" />
</MainLayout>
