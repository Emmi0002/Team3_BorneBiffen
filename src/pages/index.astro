---
import MainLayout from "../layouts/MainLayout.astro";
import Link from "../components/Link.astro";
import { Image } from "astro:assets";
import thumbsup from "../assets/images/thumbsup.png";
import Heading from "../components/Heading.astro";
import Text from "../components/Text.astro";
import CategoryCard from "../components/categorycard.astro";
import Appsection from "../components/appsection.astro";
import Button from "../components/Button.astro";
import Icon from "../components/Icon.astro";
---

<MainLayout title="Titel">
  <main class="container mx-auto"></main>
  <!-- Hero karousel sektion - CSS Auto-sliding Carousel - Full Width -->
  <section class="relative min-h-[400px] w-full">
    <div class="carousel-container w-full h-100 md:h-130 lg:h-160 relative">
      <!-- Slides -->
      <div id="slide1" class="carousel-slide absolute inset-0 opacity-100 animate-slide1">
        <img src="/img/Mosterhero.webp" class="w-full h-full object-cover" />
        <div class="absolute bottom-8 right-8 text-right text-[var(--color-text-label)] z-10">
          <h3 class="text-xl font-bold mb-2">Min mosters historier - Den hvide hval</h3>
          <p class="text-sm">10 min</p>
        </div>
      </div>

      <div id="slide2" class="carousel-slide absolute inset-0 opacity-0 animate-slide2">
        <img src="/img/Ritahero.webp" class="w-full h-full object-cover" />
        <div class="absolute bottom-8 right-8 text-right text-[var(--color-text-label)] z-10">
          <h3 class="text-xl font-bold mb-2">Rita og Krokodillen - Skovturen</h3>
          <p class="text-sm">5 min</p>
        </div>
      </div>

      <div id="slide3" class="carousel-slide absolute inset-0 opacity-0 animate-slide3">
        <img src="/img/Villehero.webp" class="w-full h-full object-cover" />
        <div class="absolute bottom-8 right-8 text-right text-[var(--color-text-label)] z-10">
          <h3 class="text-xl font-bold mb-2">Ville og Vilde Kanin</h3>
          <p class="text-sm">29 min</p>
        </div>
      </div>

      <div id="slide4" class="carousel-slide absolute inset-0 opacity-0 animate-slide4">
        <img src="/img/vitellohero.webp" class="w-full h-full object-cover" />
        <div class="absolute bottom-8 right-8 text-right text-[var(--color-text-label)] z-10">
          <h3 class="text-xl font-bold mb-2">Vitello tigger en masse slik</h3>
          <p class="text-sm">15 min</p>
        </div>
      </div>

      <div id="slide5" class="carousel-slide absolute inset-0 opacity-0 animate-slide5">
        <img src="/img/snudenhero.webp" class="w-full h-full object-cover" />
        <div class="absolute bottom-8 right-8 text-right text-[var(--color-text-label)] z-10">
          <h3 class="text-xl font-bold mb-2">Snuden rejser hjemmefra</h3>
          <p class="text-sm">12 min</p>
        </div>
      </div>
    </div>

    <!-- Statisk content der sidder fast ovenpå hele karousellen -->
    <div class="absolute inset-0 flex flex-col justify-center items-start p-8 z-20 pointer-events-none">
      <div class="pointer-events-auto">
        <Heading htmlheading="h1" size="Large" color="label" weight="Bold">Lad trygt dit barn se film på Børnebiffen</Heading>
        <Heading htmlheading="h2" size="Medium" color="label" weight="Light">Se et stort udvalg af klassiske danske børnefilm</Heading>
        <button class="btn btn-primary mt-4">Opret profil</button>
      </div>
    </div>

    <!-- Navigation indicators -->
    <div class="flex w-full justify-center gap-2 py-2 absolute bottom-2 z-30">
      <span class="hero-nav-dot w-3 h-3 rounded-full bg-white transition-all duration-300 animate-dot1"></span>
      <span class="hero-nav-dot w-3 h-3 rounded-full bg-white bg-opacity-50 transition-all duration-300 animate-dot2"></span>
      <span class="hero-nav-dot w-3 h-3 rounded-full bg-white bg-opacity-50 transition-all duration-300 animate-dot3"></span>
      <span class="hero-nav-dot w-3 h-3 rounded-full bg-white bg-opacity-50 transition-all duration-300 animate-dot4"></span>
      <span class="hero-nav-dot w-3 h-3 rounded-full bg-white bg-opacity-50 transition-all duration-300 animate-dot5"></span>
    </div>

    <!-- Popcorn figur overlapper hero -->
    <div class="absolute -bottom-26 left-30 lg:left-45 transform -translate-x-1/2 z-40 w-45 md:w-55 lg:w-80 h-45 md:h-55 lg:h-80">
      <img src="/img/Popcorn.webp" alt="Poppi figur" class="w-full h-full object-contain scale-x-[-1]" />
    </div>
  </section>

  <!-- log ind sektion -->
  <section class="container mx-auto mt-32 text-center p-10">
    <Heading htmlheading="h2" size="Medium" weight="Bold" class="text-center mt-24">Se film med de mindste</Heading>
    <Heading htmlheading="h3" size="Small" weight="Light" class="text-center mt-24">Log ind for at se alt indhold</Heading>
    <div class="flex justify-center mt-6">
      <div class="dropdown dropdown-bottom dropdown-center">
        <div tabindex="0" role="button" class="btn m-1 px-25 bg-primary text-neutral">
          Vælg dit lokale bibliotek
          <Icon imgDefault="/img/icons/download.webp" alt="pil ned" size="medium" />
        </div>
        <ul tabindex="-1" class="dropdown-content menu bg-base-300 rounded-box z-1 w-100 p-2 shadow-sm">
          <li><a>Hvidovre Bibliotek</a></li>
          <li><a>Frederiksberg Bibliotek</a></li>
          <li><a>Næstved Bibliotek</a></li>
          <li><a> Lyngby Bibliotek</a></li>
          <li><a>Københavns hovedbibliotek</a></li>
          <li><a>Amager Bibliotek</a></li>
        </ul>
      </div>
    </div>
    <div class="flex justify-center my-8">
      <div class="w-24 h-px bg-base-300"></div>
    </div>
    <div class="flex flex-col gap-4 max-w-sm mx-auto items-center">
      <input type="text" placeholder="CPR/Lånernummer/Bruger ID" class="input bg-[var(--color-surface-input)] w-full" />
      <div class="relative w-full">
        <input type="password" placeholder="Indtast pinkode" class="input bg-[var(--color-surface-input)] pr-10 w-full" />
      </div>
    </div>
    <div class="grid grid-cols-2 justify-items-center mt-8 lg:max-w-180 mx-auto">
      <Link href="#" class="text-sm text-base-100 mt-4 inline-block">Ny bruger?</Link>
      <Button variant="primary" size="small" class="mt-20">Log ind</Button>
    </div>
  </section>

  <!-- App sektion -->
  <section class="mt-30 text-center">
    <Heading htmlheading="h2" size="Medium" weight="Bold" class="text-center">Alle dine yndlingsfilm - Nu også på app</Heading>
    <Appsection />
    <Heading htmlheading="h3" size="Small" weight="Light" class="text-center mb-8">Giv børnene frihed til at gå på opdagelse</Heading>
    <button class="btn btn-primary mt-4">Download appen</button>
  </section>

  <!-- Category Cards sektion -->
  <section class="my-24">
    <Heading htmlheading="h2" size="Medium">Kategorier</Heading>

    <!-- Desktop grid (hidden på mobil) -->
    <div class="hidden sm:grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 mt-4">
      <CategoryCard imageSrc="/img/venskab.webp" imageAlt="personer krammer" label="Venskab" />
      <CategoryCard imageSrc="/img/dyr.webp" imageAlt="ugler" label="Film med Dyr" />
      <CategoryCard imageSrc="/img/kaerlighed.webp" imageAlt="to hjerter" label="Kærlighed" />
      <CategoryCard imageSrc="/img/magi.webp" imageAlt="troldmand" label="Magiske film" />
    </div>

    <!-- Mobil karousel (kun synlig på mobil) -->
    <div class="sm:hidden mt-4">
      <div class="overflow-x-auto">
        <div class="flex gap-4 pb-4" style="width: max-content;">
          <CategoryCard imageSrc="/img/venskab.webp" imageAlt="personer krammer" label="Venskab" stylingClasses="flex-shrink-0" />
          <CategoryCard imageSrc="/img/dyr.webp" imageAlt="ugler" label="Film med Dyr" stylingClasses="flex-shrink-0" />
          <CategoryCard imageSrc="/img/kaerlighed.webp" imageAlt="to hjerter" label="Kærlighed" stylingClasses="flex-shrink-0" />
          <CategoryCard imageSrc="/img/magi.webp" imageAlt="troldmand" label="Magiske film" stylingClasses="flex-shrink-0" />
        </div>
      </div>
    </div>
  </section>
</MainLayout>
