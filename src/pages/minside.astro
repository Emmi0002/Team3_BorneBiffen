---
import MainLayout from "../layouts/MainLayout.astro";
import Heading from "../components/Heading.astro";
import CategoryCard from "../components/categorycard.astro";
import Appsection from "../components/appsection.astro";
import Cardslider from "../components/Cardslider.astro";
import Header from "../components/Header.astro";
import HeaderNegative from "../components/HeaderNegative.astro";
---

<MainLayout title="Børnebiffen - Min Side">
  <HeaderNegative />
  <main>
    <!-- app sektion -->
    <section class="text-center my-24 mx-auto">
      <Heading htmlheading="h2" size="Medium" weight="Light" class="text-center mb-8">Giv børnene frihed til at gå på opdagelse</Heading>
      <Heading htmlheading="h3" size="Small" weight="Light" class="text-center mb-8">Download vores app!</Heading>
      <div class="max-w-4xl mx-auto">
        <Appsection />
        <button class="btn btn-primary mt-4">Download appen</button>
      </div>
    </section>

    <!-- kategori sektion -->
    <section class="my-24 mx-auto max-w-6xl px-4">
      <!-- sektion overskrift -->
      <Heading htmlheading="h2" weight="Bold" size="Medium">Dine mest sete Temaer</Heading>

      <!-- Desktop grid (hidden på mobil) -->
      <div class="hidden sm:grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 mt-4">
        <CategoryCard imageSrc="/img/venskab.webp" imageAlt="personer krammer" label="Venskab" />
        <CategoryCard imageSrc="/img/dyr.webp" imageAlt="ugler" label="Film med Dyr" />
        <CategoryCard imageSrc="/img/kaerlighed.webp" imageAlt="to hjerter" label="Kærlighed" />
        <CategoryCard imageSrc="/img/magi.webp" imageAlt="troldmand" label="Magiske film" />
      </div>

      <!-- Mobil karousel (kun synlig på mobil) -->
      <div class="sm:hidden mt-4">
        <div class="overflow-x-auto">
          <div class="flex gap-4 pb-4" style="width: max-content;">
            <CategoryCard imageSrc="/img/venskab.webp" imageAlt="personer krammer" label="Venskab" stylingClasses="flex-shrink-0" />
            <CategoryCard imageSrc="/img/dyr.webp" imageAlt="ugler" label="Film med Dyr" stylingClasses="flex-shrink-0" />
            <CategoryCard imageSrc="/img/kaerlighed.webp" imageAlt="to hjerter" label="Kærlighed" stylingClasses="flex-shrink-0" />
            <CategoryCard imageSrc="/img/magi.webp" imageAlt="troldmand" label="Magiske film" stylingClasses="flex-shrink-0" />
          </div>
        </div>
      </div>
    </section>

    <!-- favorit sektion -->
    <section class="mb-[var(--margin-sektioner-small)] lg:mb-[var(--margin-sektioner-large)]">
      <Cardslider Overskrift="Dine favoritter" />
    </section>

    <!-- se videre sektion -->
    <section class="mb-[var(--margin-sektioner-small)] lg:mb-[var(--margin-sektioner-large)]">
      <Cardslider Overskrift="Se videre..." />
    </section>

    <!-- anbefalet sektion -->
    <section class="mb-[var(--margin-sektioner-small)] lg:mb-[var(--margin-sektioner-large)]">
      <Cardslider Overskrift="Anbefalet til dig" />
    </section>
  </main>
</MainLayout>
